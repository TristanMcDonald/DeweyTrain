<Page x:Class="DeweyTrain.Views.IdentifyingAreasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeweyTrain.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IdentifyingAreasPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!--listbox for call numbers (Sajeetharan, 2014)-->

        <ListBox x:Name="callNumbersListBox" 
                 Grid.Column="0"
                 Grid.RowSpan="3"
                 Height="350" 
                 Margin="10,50,0,50" 
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Width="255"
                 FontWeight="Bold"
                 FontSize="17"
                 Padding="5,10,5,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding callNumber}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--listbox for descriptions (Sajeetharan, 2014)-->
        
        <ListBox x:Name="descriptionsListBox" 
                 Grid.Column="0"
                 Grid.RowSpan="3"
                 Height="350" 
                 Margin="0,50,10,50"
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Right"
                 Width="255"
                 FontWeight="Bold"
                 FontSize="17"
                 Padding="5,10,5,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding description}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <!--Button to check users answer-->

        <Button x:Name="checkAnswerBtn"
                Click="checkAnswerBtn_Click"
                Grid.Column="1"
                Grid.Row="2"
                Margin="50,10,50,110"
                Content="CHECK ANSWER"
                FontWeight="Bold"
                Foreground="LightBlue"
                Background="Blue"
                BorderBrush="LightBlue"
                BorderThickness="0.5"/>

        <!--Button to restart task-->

        <Button x:Name="restartAreasBtn"
                
                Grid.Column="1"
                Grid.Row="2"
                Margin="50,55,50,65"
                Content="RESTART"
                FontWeight="Bold"
                Foreground="LightBlue"
                Background="CadetBlue"
                BorderBrush="LightBlue"
                BorderThickness="0.5"/>

        <ListBox x:Name="testListBox" 
                 Grid.Column="2"
                 Grid.RowSpan="2"
                 Height="299" 
                 Margin="50,30" 
                 VerticalAlignment="Center" 
                 Width="224"
                 FontWeight="Bold"
                 FontSize="17"
                 Padding="10,10,10,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding description}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



    </Grid>
</Page>
